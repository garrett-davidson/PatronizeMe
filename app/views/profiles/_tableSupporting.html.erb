<% if user_signed_in? %>
  <% current_user.issue_transactions.each do |issue_transactions| %>
    <div class="card ">
        <div class="card-body flex-justify-between">
          <div class="row">
            <a href="<%=issue_transactions.issue.project.link%>" class="col-12 card-link"><%= issue_transactions.issue.project.name %></a>
            <h3 class="col-3 card-link"><%= issue_transactions.issue %></h4>
            <div class="col-2"><%= pluralize(issue_transactions.issue.issue_transactions.count, 'supporter') %></div>
            <div class="col"><%= '$' + issue_transactions.issue.total_funding + ' Pledged' %></div>
            <button type="button" id="btn_table" class="btn btn-outline-primary" onclick="location.href = '<%=project_path(issue_transactions.issue.project)%>';">View</button>
          </div>
          <div class="row justify-content-end">
            <div class="card-text text-primary col-auto ">My support</div>
            <div class="card-text text-primary text-right col-auto">$<%= issue_transactions.amount %></div>
          </div>
          <div class="row justify-content-between">
            <div class="card-text"><%= issue_transactions.issue.description %></div>
          </div>
        </div>
    </div>
  <% end %>
<% else %>
  <% @user.issue_transactions.each do |issue_transactions| %>
    <div class="card ">
        <div class="card-body flex-justify-between">
          <div class="row">
            <a href="<%=issue_transactions.issue.project.link%>" class="col-3 card-link"><%= issue_transactions.issue.project.name %></a>
            <h4 class="col-3 card-link"><%= issue_transactions.issue %></h4>
            <div class="col-2"><%= pluralize(issue_transactions.issue.issue_transactions.count, 'supporter') %></div>
            <div class="col"><%= '$' + issue_transactions.issue.total_funding + ' Pledged' %></div>
            <button type="button" id="btn_table" class="btn btn-outline-primary" onclick="location.href = '<%=project_path(issue_transactions.issue.project)%>';">View</button>
          </div>
          <div class="row justify-content-between">
            <div class="card-text"><%= issue_transactions.issue.description %></div>
          </div>
        </div>
    </div>
  <% end %>
<% end %>